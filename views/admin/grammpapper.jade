extends layout

block content
    .container-fluid
        button.btn.btn-raised.btn-cosmo.add-btn(type="button") Добавить граммаж бумаги
        button.btn.btn-raised.btn-danger.cancel-btn.hidden(type="button") Отмена
        button.btn.btn-raised.btn-info.save-btn.hidden(type="button") Сохранить
        .row.row-papper
            .form-group
                label.control-label.col-md-2 Граммаж бумаги
                .col-md-10
                    select.form-control.text(multiple, id="type-papper", style="width:100%;")
        .row
            .col-md-12
                table.table.table-striped
                    tbody
                        each item in grammPappers
                            tr
                                td=item.name