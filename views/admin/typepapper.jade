extends layout

block content
    .container-fluid
        button.btn.btn-raised.btn-cosmo.add-btn(type="button") Добавить тип бумаги
        button.btn.btn-raised.btn-danger.cancel-btn.hidden(type="button") Отмена
        button.btn.btn-raised.btn-info.save-btn.hidden(type="button") Сохранить
        .row.row-papper
            .form-group
                .col-md-2
                    label.control-label Тип бумаги
                .col-md-10
                    select.form-control.text(multiple, id="type-papper", style="width:100%;")