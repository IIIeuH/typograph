extends layout


block content
    .panel.panel-white
        .panel-heading
            h3.panel-title Все паспорта
        .panel-body.passports-data
            table.table.table-hover.table-bordered.table-striped.table-condensed
                thead
                    tr
                        th
                            .form-group
                                label.col-md-12.control-label(for="searchDate") Дата
                                .col-md-12
                                    input.form-control(type="text", id="searchDate", placeholder="Поиск...")
                        th
                            .form-group
                                label.col-md-12.control-label(for="number") №
                                .col-md-12
                                    input.form-control(type="text", id="number", placeholder="Поиск...")
                        th
                            .form-group
                                label.col-md-12.control-label(for="searchCustomer") Заказчик
                                .col-md-12
                                    input.form-control(type="text", id="searchCustomer", placeholder="Поиск...")
                        th
                            .form-group
                                label.col-md-12.control-label(for="paper") Ф\б
                                .col-md-12
                                    input.form-control(type="text", id="paper", placeholder="Поиск...")
                        th
                            .form-group
                                label.col-md-12.control-label(for="circulation") Тираж
                                .col-md-12
                                    input.form-control(type="text", id="circulation", placeholder="Поиск...")
                        th
                            .form-group
                                label.col-md-12.control-label(for="id") ИД
                                .col-md-12
                                    input.form-control(type="text", id="id", placeholder="Поиск...")
                tbody
                    each item in passports
                        tr(data-status=item.status, data-id=item.passportId, onclick='window.location.href="/citipi/all/'+item._id+'"; return false')
                            td.passport-date=moment(item.passOn, "YYYY.MM.DD.").format("DD.MM")
                            td.passport-number=item.inc
                            td.passport-customer=item.customer
                            td.passport-paper
                                strong Тип:
                                |   #{item.typePaper}
                                br
                                strong Размер:
                                |   #{item.typePaperSize}
                                br
                                strong Граммаж:
                                |   #{item.typePaperGramm}
                            td.passport-circulation=item.circulationFiled
                            td.passport-id=item.passportId