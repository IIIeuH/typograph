extends layout


block content
    include ../error
    .panel.panel-white
        .panel-heading
            h3.panel-title Заявки на бумагу
        .panel-body
            .row(style="margin-top:50px;")
                .col-md-12
                    table.table.table-bordered
                        thead
                            th Дата
                            th Заявка
                            th Менеджер
                        tbody
                            each item in order
                                tr
                                    td=moment(item.date).format('DD.MM.YYYY')
                                    td
                                        each order in item.order
                                            table.table.table-bordered.table-condensed.table-striped
                                                thead
                                                    th Тип
                                                    th Граммаж
                                                    th Формат
                                                    th Кол-во
                                                tbody
                                                    tr
                                                        td=order.typePaper
                                                        td=order.grammPaper
                                                        td=order.sizePaper
                                                        td=order.count
                                    td=item.person
