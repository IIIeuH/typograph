extends layout


block content
    include ../error
    .panel.panel-white
        .panel-heading
            h3.panel-title Приход товара список
        .panel-body.passports-data
            .row
                .col-md-12
                    table.table.table-bordered.table-hover
                        thead
                            th Номер
                            th От
                            th Поставщик
                            th Сумма
                            th
                        tbody
                            each item in capitalization
                                tr
                                    td(onclick=`window.location.href = '/storekeeper/capitalization/edit/${item._id}'`, style="cursor: pointer")=item.number
                                    td(onclick=`window.location.href = '/storekeeper/capitalization/edit/${item._id}'`, style="cursor: pointer")=moment(item.date).format("YYYY-MM-DD HH:mm")
                                    td(onclick=`window.location.href = '/storekeeper/capitalization/edit/${item._id}'`, style="cursor: pointer")=item.provider
                                    td(onclick=`window.location.href = '/storekeeper/capitalization/edit/${item._id}'`, style="cursor: pointer")=item.totals
                                    td
                                        i.material-icons.removeItemId(id=item._id, data-name=item.number, data-collection="capitalizations" style="float: right;") delete_forever
